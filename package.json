{
  "name": "ngrx-rtk-query-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "build": "ng build",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --ci --runInBand",
    "e2e": "ng e2e",
    "lint": "ng lint && stylelint '*/**/*.scss'",
    "format": "prettier --check --ignore-unknown .",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node .husky/hooks/pre-commit.js",
    "commit": "git add . && cz",
    "deploy": "ng deploy --base-href=/ngrx-rtk-query/",
    "copy": "cpx README.md dist/ngrx-rtk-query",
    "build:lib": "ng build ngrx-rtk-query && npm run copy",
    "test:lib": "jest --config ./projects/ngrx-rtk-query/jest.config.js",
    "test:lib:watch": "npm run test:lib -- --watch",
    "test:lib:coverage": "npm run test:lib -- --coverage",
    "test:lib:ci": "npm run test:lib -- --ci --runInBand",
    "postbuild:lib": "npm run build --prefix projects/ngrx-rtk-query",
    "semantic-release": "semantic-release",
    "update:msw": "npx msw init src --no-save",
    "prepare": "husky install",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@ngneat/lib": "^3.0.1",
    "@ngrx/effects": "^13.0.2",
    "@ngrx/router-store": "^13.0.2",
    "@ngrx/store": "^13.0.2",
    "@reduxjs/toolkit": "^1.8.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.3",
    "@angular-devkit/build-angular": "^13.3.0",
    "@angular-eslint/builder": "^13.1.0",
    "@angular-eslint/eslint-plugin": "^13.1.0",
    "@angular-eslint/eslint-plugin-template": "^13.1.0",
    "@angular-eslint/schematics": "^13.1.0",
    "@angular-eslint/template-parser": "^13.1.0",
    "@angular/cli": "~13.3.0",
    "@angular/compiler-cli": "~13.3.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@ngrx/store-devtools": "^13.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/angular": "^11.0.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.20.47",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "all-contributors-cli": "^6.20.0",
    "angular-cli-ghpages": "1.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsdoc": "^38.0.4",
    "eslint-plugin-ngrx": "^2.0.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-rxjs": "^5.0.2",
    "eslint-plugin-testing-library": "^5.1.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.1",
    "jsonc-parser": "^3.0.0",
    "lint-staged": "^12.3.6",
    "msw": "^0.39.2",
    "ng-packagr": "^13.2.1",
    "node-fetch": "^2.6.7",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "prettier-plugin-organize-attributes": "0.0.5",
    "protractor": "~7.0.0",
    "semantic-release": "^18.0.1",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "ts-node": "~9.1.1",
    "typescript": "~4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,html}": "eslint --cache --fix",
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ]
  }
}
