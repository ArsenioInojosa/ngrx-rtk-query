{
  "name": "ngrx-rtk-query-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "build": "ng build",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --ci --runInBand",
    "e2e": "ng e2e",
    "lint": "ng lint && stylelint '*/**/*.scss'",
    "format": "prettier --check --ignore-unknown .",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node .husky/hooks/pre-commit.js",
    "commit": "git add . && cz",
    "deploy": "ng deploy --base-href=/ngrx-rtk-query/",
    "copy": "cpx README.md dist/ngrx-rtk-query",
    "build:lib": "ng build ngrx-rtk-query && npm run copy",
    "test:lib": "jest --config ./projects/ngrx-rtk-query/jest.config.js",
    "test:lib:watch": "npm run test:lib -- --watch",
    "test:lib:coverage": "npm run test:lib -- --coverage",
    "test:lib:ci": "npm run test:lib -- --ci --runInBand",
    "postbuild:lib": "npm run build --prefix projects/ngrx-rtk-query",
    "semantic-release": "semantic-release",
    "update:msw": "npx msw init src --no-save",
    "prepare": "husky install",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.1",
    "@angular/common": "^15.1.1",
    "@angular/compiler": "^15.1.1",
    "@angular/core": "^15.1.1",
    "@angular/forms": "^15.1.1",
    "@angular/platform-browser": "^15.1.1",
    "@angular/platform-browser-dynamic": "^15.1.1",
    "@angular/router": "^15.1.1",
    "@ngneat/lib": "^5.0.0",
    "@ngrx/effects": "^15.1.0",
    "@ngrx/router-store": "^15.1.0",
    "@ngrx/store": "^15.1.0",
    "@reduxjs/toolkit": "~1.8.5",
    "rxjs": "~7.5.7",
    "tslib": "^2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^15.0.0",
    "@angular-devkit/build-angular": "^15.1.2",
    "@angular-eslint/builder": "^15.2.0",
    "@angular-eslint/eslint-plugin": "^15.2.0",
    "@angular-eslint/eslint-plugin-template": "^15.2.0",
    "@angular-eslint/schematics": "^15.2.0",
    "@angular-eslint/template-parser": "^15.2.0",
    "@angular/cli": "^15.1.2",
    "@angular/compiler-cli": "^15.1.1",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@ngrx/store-devtools": "^15.1.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/angular": "^13.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.6",
    "@types/node": "^12.20.55",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "all-contributors-cli": "^6.24.0",
    "angular-cli-ghpages": "1.0.5",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jsdoc": "^39.6.7",
    "eslint-plugin-ngrx": "^2.1.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-rxjs": "^5.0.2",
    "eslint-plugin-tailwindcss": "^3.8.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-preset-angular": "^12.2.5",
    "jsonc-parser": "^3.2.0",
    "lint-staged": "^13.1.0",
    "msw": "^0.49.3",
    "ng-packagr": "^15.1.1",
    "node-fetch": "^2.6.8",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-attributes": "0.0.5",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "protractor": "~7.0.0",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.5",
    "ts-node": "~10.9.1",
    "typescript": "~4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,html}": "eslint --cache --fix",
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ]
  }
}
